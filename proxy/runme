DATE=$(date)
PWD=$(pwd)

echo $DATE
echo "Starting all processes owned by $PWD ..."

#[ ! -f ./node_modules ] && npm install
#[ ! -f ./bower_components ] && bower install
# npm install && bower install
# forever start $PWD/server.js
source ~/.profile
server=$(which npm-proxy-cache)
[ -z $server ] && ( npm config del registry;npm config del proxy;npm config del https-proxy;npm install -g npm-proxy-cache; npm set ca null;npm config set proxy http://localhost:8080;npm config set https-proxy http://localhost:8080;npm config set strict-ssl false)
mkdir cache
npm-proxy-cache --storage ./cache
